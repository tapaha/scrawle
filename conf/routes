# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /changelog        			controllers.Application.changelog()
GET     /                           controllers.Application.index()
GET     /past/:req_date                   controllers.Application.list(req_date:String)
GET     /view/:issue_id             controllers.Application.view(issue_id:Integer)
GET     /view.json/:issue_id        controllers.Application.viewJSON(issue_id:Integer)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
#GET     /javascripts/*file               controllers.Assets.at(path="/public/javascripts", file)
#GET     /data/*file               controllers.Assets.at(path="/public/data", file)
